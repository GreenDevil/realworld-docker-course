# использование образа с установленной node 15 версии
FROM node:15.9.0-alpine3.11

# рабочая директория в контейнере
WORKDIR /usr/src/app

# копирование файлов с рабочей машины в контейнер
COPY package*.json ./

# запуск команды в контейнере
RUN npm install

# копирование всех файлов внутрь контейнера исключая файлы из .dockerignore
COPY . .
